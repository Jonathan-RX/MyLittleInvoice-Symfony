{% extends 'base.html.twig' %}

{% block title %}Invoice index{% endblock %}

{% block body %}
    <h1>Invoice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adress</th>
                <th>Sold</th>
                <th>Printed</th>
                <th>Send_by_mail</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice in invoices %}
            <tr>
                <td>{{ invoice.id }}</td>
                <td>{{ invoice.adress }}</td>
                <td>{{ invoice.sold }}</td>
                <td>{{ invoice.printed ? 'Yes' : 'No' }}</td>
                <td>{{ invoice.sendByMail ? 'Yes' : 'No' }}</td>
                <td>{{ invoice.email }}</td>
                <td>
                    <a href="{{ path('admin_invoice_show', {'id': invoice.id}) }}">show</a>
                    <a href="{{ path('admin_invoice_edit', {'id': invoice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_invoice_new') }}">Create new</a>
{% endblock %}
