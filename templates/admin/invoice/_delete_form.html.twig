<form method="post" action="{{ path('admin_invoice_delete', {'id': invoice.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice.id) }}">
    <button class="btn">{% trans %}Delete{% endtrans %}</button>
</form>
